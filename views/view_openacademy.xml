<odoo>
    <data>
        <record id="session_form_view_inherit" model="ir.ui.view">
            <field name="name">session.form.inherit</field>
            <field name="model">openacademy.session</field>
            <field name="inherit_id" ref="session_form_view"/>
            <field name="arch" type="xml">
                <!-- find field description and add the field
                     idea_ids after it -->
                <xpath expr="//field[@name='attendees_count']" position="replace">

                </xpath>
                <xpath expr="//field[@name='instructor_id']" position="after">
                  <field name="attendees_count" string="Number of Attendees"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>